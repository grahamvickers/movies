    <u id="details">
      <li><p id="bio"><%= movie.bio %></p></li>
      <li><p>Directed by: <%= movie.director %></p></li>
      <li><p>Released: <%= movie.year %></p></li>
      <li><p>Rated: <%= movie.rated %></p></li>
      <li><p>Run time: <%= movie.time %></p></li>
      <li><p>Popularity: <%= movie.rating %> / 10 â˜…</p></li>

    </ul>
  </section>
  <section id="actions">
